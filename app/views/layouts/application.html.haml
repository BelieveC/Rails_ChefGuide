!!! 5
%html
%head
	%title CookBook
	=stylesheet_link_tag 'application','data-turbolinks-track'=>true,media:'all'
	=javascript_include_tag 'application','data-turbolinks-track'=>true
	=csrf_meta_tags
%body
	%nav.navbar.navbar-default
		.container
			.navbar-brand=link_to "CookBook",root_path
			
			-if user_signed_in?
				%ul.nav.navbar-nav.navbar-right
					%li=link_to "New Recipe",new_recipe_path
					%li=link_to "Sign Out",destroy_user_session_path,method: :delete,data:{confirm:"Are you sure?"}
			-else
				%ul.nav.navbar-nav.navbar-right
					%li=link_to "Sign Up",new_user_registration_path
					%li=link_to "Sign In",new_user_session_path

	.container
		-flash.each do |name,msg|
			=content_tag :div,msg,class:"alert alert-info"
		=yield
